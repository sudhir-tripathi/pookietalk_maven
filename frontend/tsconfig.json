{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "types": ["node"],
    "paths": {
      "@components/*": ["components/*"],
      "@pages/*": ["pages/*"],
      "@context/*": ["context/*"],
      "@service/*": ["services/*"],
      "@hook/*": ["hooks/*"],
      "@util/*": ["util/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
